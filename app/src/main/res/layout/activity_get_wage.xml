<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.project3275playmate.MoneyRelated.GetWage" android:background="@color/backgroundcolor6">
    <ImageView
            android:layout_width="145dp"
            android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:background="#00FFFFFF"/>
    <TextView
            android:text="@string/wagepage1"
            android:layout_width="205dp"
            android:layout_height="42dp" android:id="@+id/textView28"
            android:background="#00FFFFFF" android:textSize="24sp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginEnd="162dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/expertBalance"
            android:background="#00FFFFFF" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="169dp" android:layout_marginEnd="242dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="142dp" android:textSize="16sp"/>
    <EditText
            android:layout_width="357dp"
            android:layout_height="58dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/withdrawAmount"
            android:hint="@string/wageAmount" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp" android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="127dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28"/>
    <ImageView
            android:layout_width="426dp"
            android:layout_height="215dp" app:srcCompat="@drawable/pic" android:id="@+id/imageView14"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/withdrawAmount"/>
    <Button
            android:text="@string/GO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnGetwage"
            app:backgroundTint="@color/logoColor" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="166dp" android:layout_marginEnd="167dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"/>

</androidx.constraintlayout.widget.ConstraintLayout>