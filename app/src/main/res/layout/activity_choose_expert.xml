<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.project3275playmate.ChooseExpert" android:background="@color/backgroundcolor3">
    <ImageView
            android:layout_width="145dp"
            android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:background="#00FFFFFF"/>
    <TextView
            android:text="Choose a game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            android:background="#00FFFFFF" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="135dp" android:layout_marginEnd="136dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="83dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo"/>
    <Spinner
            android:id="@+id/userChooseGameList"
            android:layout_width="255dp"
            android:layout_height="38dp"
            android:entries="@array/gamelist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/backgroundcolor5" android:spinnerMode="dropdown"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <Button
            android:text="@string/GO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userChooseGameGo"
            app:backgroundTint="@color/logoColor" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/userChooseGameList"/>
    <TextView
            android:text="Choose Player Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView15"
            android:background="#00FFFFFF" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="106dp" android:layout_marginEnd="107dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/textView26"/>
    <RadioGroup
            android:layout_width="115dp"
            android:layout_height="81dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/userChooseGender"
            android:background="#00FFFFFF"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/textView15">
        <RadioButton
                android:text="@string/PlayerRegisterRbtn1"
                android:layout_width="94dp"
                android:layout_height="37dp"
                android:textSize="16sp" android:id="@+id/userChooseGirl"/>
        <RadioButton
                android:text="@string/PlayerRegisterRbtn2"
                android:layout_width="95dp"
                android:layout_height="34dp"
                android:textSize="16sp" android:id="@+id/userChooseBoy"/>
    </RadioGroup>
    <Button
            android:text="@string/GO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userChooseGenderGo"
            app:backgroundTint="#FB8C00" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="112dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="OR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView26"
            android:textSize="24sp" android:background="#00FFFFFF"
            android:textColor="#F4511E" android:textStyle="bold|italic" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="179dp" android:layout_marginEnd="201dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/userChooseGameGo"/>
</androidx.constraintlayout.widget.ConstraintLayout>