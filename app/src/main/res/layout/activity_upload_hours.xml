<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize" android:background="@color/backgroundcolor4">

    <ImageView
            android:layout_width="145dp"
            android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:background="#00FFFFFF"/>


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/expertName"
            android:hint="@string/hintEnterName" android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:layout_marginEnd="99dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" android:textSize="20sp"/>

    <EditText
            android:id="@+id/playdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:hint="@string/uploadHoursDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:layout_marginEnd="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.518"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/adminName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/playHours"
            android:hint="@string/hintHours" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:layout_marginEnd="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.518"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/playdate"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submitHours"
            android:hint="@string/btnSubmitHours" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" android:layout_marginEnd="155dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@color/buttonColor"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/playHours"
            android:onClick="submitTransactions"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/customerName"
            android:hint="@string/enterCustomerName" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="86dp"
            android:layout_marginEnd="85dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/expertName"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/adminName"
            android:hint="@string/AdminName" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="86dp" android:layout_marginEnd="85dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/customerName"/>

</androidx.constraintlayout.widget.ConstraintLayout>