<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UploadPages.UploadFiles">
    <ImageView
            android:layout_width="145dp"
            android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="47dp"/>
    <Button
            android:text="@string/finishEdit"
            android:layout_width="180dp"
            android:layout_height="47dp" android:id="@+id/btnfinishEdit"
            android:background="@color/white" app:backgroundTint="#AD1111"
            android:textSize="20sp" android:layout_marginLeft="13dp" android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/btnaddSkills" android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="97dp"/>
    <Button
            android:text="@string/addskills"
            android:layout_width="180dp"
            android:layout_height="47dp" android:id="@+id/btnaddSkills"
            android:background="@color/white" app:backgroundTint="#AD1111"
            android:textSize="20sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/btnfinishEdit"
            android:layout_marginEnd="13dp" android:layout_marginRight="13dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="97dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"/>

    <fragment
            android:id="@+id/nav_host_fragment_activity_upload_hours"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="258dp"
            android:layout_height="10dp"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ShowProfile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:layout_marginRight="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="195dp" android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>