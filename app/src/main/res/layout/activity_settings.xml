<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings" android:background="@color/backgroundcolor4">


    <ImageView
            android:layout_width="145dp"
            android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="55dp"
            android:background="#00C0ECE7"/>


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtChangeEmail"
            android:hint="@string/changeEmail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="93dp" android:layout_marginStart="93dp" android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" android:textSize="20sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtChangePW"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="93dp"
            android:layout_marginStart="93dp" android:layout_marginEnd="105dp" android:layout_marginRight="105dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/ChangePW"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.481" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/txtChangeName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtChangeName"
            android:hint="@string/ChangeName" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:layout_marginEnd="91dp"
            android:layout_marginRight="91dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtChangeEmail"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSettingSubmit"
            app:backgroundTint="@color/buttonColor" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="152dp"
            android:layout_marginStart="152dp" android:layout_marginEnd="153dp" android:layout_marginRight="153dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="107dp"
            app:layout_constraintTop_toBottomOf="@+id/txtChangePW"/>

</androidx.constraintlayout.widget.ConstraintLayout>