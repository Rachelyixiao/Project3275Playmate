<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterLogin.LoginPage" android:background="@drawable/gamebackground">
    <ImageView
            android:layout_width="145dp"
            android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="47dp" android:background="#00FFFFFF"/>
    <TextView

            android:layout_width="275dp"
            android:layout_height="735dp" android:id="@+id/textView11"
            android:background="@color/backgroundcolor6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
    />
    <ImageView
        android:layout_width="145dp"
        android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imgLogo1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp" android:background="#00FFFFFF"/>

    <ImageView
            android:src="@drawable/gamingmonitorvsregular"
            android:layout_width="266dp"
            android:layout_height="150dp" android:id="@+id/imageView6"

            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/imgLogo"
            app:layout_constraintHorizontal_bias="0.482" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailLogin"
            android:hint="@string/Enteremail" android:layout_marginStart="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.414" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwLogin"
            android:hint="@string/Enterpw" android:layout_marginStart="31dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/emailLogin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.407"/>
    <TextView
            android:text="Playmate Game Club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            android:background="#00FFFFFF"
            android:textColor="@color/buttonColor" android:textSize="20sp" android:textStyle="bold|italic"
            android:layout_marginStart="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/GO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnLoginSubmit"
            android:layout_marginStart="31dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="564dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.294" app:backgroundTint="@color/logoColor" android:textSize="20sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView14"
            android:text="@string/forgetPassword" android:textColor="#FFB300"
            android:background="#00FFFFFF" android:layout_marginStart="49dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="524dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.255"/>
    <TextView
            android:text="@string/reset"
            android:layout_width="53dp"
            android:layout_height="29dp" android:id="@+id/resetPw"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="128dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>