<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout"
                                                   tools:visibility="visible"
                                                   android:background="@color/backgroundcolor4">


    <ImageView
            android:layout_width="145dp"
            android:layout_height="27dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="133dp" android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="47dp" android:background="#00FFFFFF"/>




    <Spinner
            android:id="@+id/addGamelistProfile"
            android:layout_width="255dp"
            android:layout_height="38dp"
            android:entries="@array/gamelist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:background="@color/backgroundcolor5" android:spinnerMode="dropdown"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="314dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/getSkills"
            android:hint="@string/profileHint" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/addGamelistProfile" android:background="@color/backgroundcolor2"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSubmitProfile"
            app:backgroundTint="@color/buttonColor"
            android:textColor="@color/white" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="152dp" android:layout_marginStart="152dp" android:layout_marginEnd="153dp"
            android:layout_marginRight="153dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/getSkills"/>

</androidx.constraintlayout.widget.ConstraintLayout>