<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Homepage.CustomerMainPage" android:background="@drawable/backkkk">

    <ImageView
            android:layout_width="145dp"
            android:layout_height="22dp" app:srcCompat="@drawable/logo" android:id="@+id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="133dp" android:layout_marginEnd="133dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:background="#00FFFFFF"/>
    <TextView
            android:text="@string/UserMainText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView22"
            android:textSize="34sp" android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="127dp" android:layout_marginEnd="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="45dp" android:layout_marginBottom="83dp"
            app:layout_constraintBottom_toTopOf="@+id/textView24" android:background="#00FFFFFF"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView23"
            android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="190dp" android:layout_marginEnd="221dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="140dp"/>
    <TextView
            android:text="@string/UserMainText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView24"
            android:textColor="@color/white" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="#00FFFFFF"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/Username"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Username"
            android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="528dp"
            app:layout_constraintHorizontal_bias="0.485" android:text="username" android:textSize="24sp"
            android:background="#00FFFFFF" app:layout_constraintTop_toBottomOf="@+id/textView22"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Balance"
            android:textColor="@color/white" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="396dp"
            app:layout_constraintHorizontal_bias="0.485" android:text="000" android:textSize="24sp"
            android:background="#00FFFFFF" app:layout_constraintTop_toBottomOf="@+id/textView24"/>

    <Button
            android:text="@string/UserMainBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnChooseExpert"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="130dp" android:layout_marginEnd="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@color/logoColor"
            android:textSize="16sp" app:layout_constraintHorizontal_bias="0.312"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/btnTopup"/>
    <Button
            android:text="@string/UserMainBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnTopup"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginEnd="161dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@color/logoColor" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/btnReviewExpert"/>
    <Button
            android:text="@string/btnReviewE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnReviewExpert"
            app:backgroundTint="@color/logoColor" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp" android:layout_marginEnd="136dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="520dp" android:layout_marginBottom="98dp"
            app:layout_constraintBottom_toTopOf="@+id/contacticonCustomerMain"/>


    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/home" android:id="@+id/homeiconCustomerMain"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="58dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toStartOf="@+id/contacticonCustomerMain" android:layout_marginEnd="59dp"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="0dp" app:srcCompat="@drawable/contact" android:id="@+id/contacticonCustomerMain"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@+id/homeiconCustomerMain"
            app:layout_constraintEnd_toStartOf="@+id/settingiconCustomerMain"
            app:layout_constraintTop_toBottomOf="@+id/btnReviewExpert"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/setting" android:id="@+id/settingiconCustomerMain"
            android:background="#FFFFFF" android:layout_marginStart="59dp"
            app:layout_constraintStart_toEndOf="@+id/contacticonCustomerMain"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="58dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>